{
  "name": "flutter-widget-preview",
  "displayName": "Flutter Widget Preview",
  "description": "Real-time widget testing for Flutter â€” see your UI render live during tests. Includes MCP tools for AI-powered widget development.",
  "version": "0.1.4",
  "publisher": "FelipeFontes",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#0175C2",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felipe-fontes/flutter-widget-preview"
  },
  "keywords": [
    "flutter",
    "widget",
    "preview",
    "testing",
    "visual testing",
    "mcp",
    "ai",
    "copilot"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Testing",
    "Visualization",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "flutter-preview.mcp-server",
        "label": "Flutter Preview"
      }
    ],
    "commands": [
      {
        "command": "flutterPreview.previewTest",
        "title": "Preview Widget Test",
        "category": "Flutter Preview",
        "icon": "$(play)"
      },
      {
        "command": "flutterPreview.stopPreview",
        "title": "Stop Widget Preview",
        "category": "Flutter Preview",
        "icon": "$(debug-stop)"
      },
      {
        "command": "flutterPreview.selectResolution",
        "title": "Select Preview Resolution",
        "category": "Flutter Preview",
        "icon": "$(device-mobile)"
      },
      {
        "command": "flutterPreview.setupMcp",
        "title": "Setup MCP for Copilot",
        "category": "Flutter Preview",
        "icon": "$(sparkle)"
      },
      {
        "command": "flutterPreview.registerMcpCursor",
        "title": "Register MCP for Cursor",
        "category": "Flutter Preview"
      }
    ],
    "configuration": {
      "title": "Flutter Preview",
      "properties": {
        "flutterPreview.webPort": {
          "type": "number",
          "default": 9090,
          "description": "Port for the preview web server"
        },
        "flutterPreview.openInBrowser": {
          "type": "boolean",
          "default": false,
          "description": "Open preview in external browser instead of VS Code webview"
        },
        "flutterPreview.defaultResolution": {
          "type": "string",
          "default": "iPhone 15 Pro",
          "enum": [
            "iPhone 15 Pro",
            "iPhone 15 Pro Max",
            "iPhone SE (3rd gen)",
            "iPad Pro 12.9\"",
            "Pixel 8",
            "Pixel 8 Pro",
            "Galaxy S24",
            "Desktop 1080p",
            "Desktop 1440p",
            "Custom"
          ],
          "description": "Default device resolution for preview"
        }
      }
    }
  },
  "scripts": {
    "sync-packages": "rm -rf packages && mkdir -p packages && cp -r ../packages/preview_binding ../packages/preview_core ../packages/preview_viewer ../packages/mcp_preview packages/ && rm -rf packages/*/.dart_tool packages/*/build",
    "vscode:prepublish": "npm run sync-packages && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run sync-packages && npm run compile && npx @vscode/vsce package --allow-missing-repository",
    "publish": "npm run sync-packages && npm run compile && npx @vscode/vsce publish",
    "publish:patch": "npm run sync-packages && npm run compile && npx @vscode/vsce publish patch",
    "publish:minor": "npm run sync-packages && npm run compile && npx @vscode/vsce publish minor"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  }
}
